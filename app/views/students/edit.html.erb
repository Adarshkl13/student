<div class="container-fluid">
<div class="col-md-6 col-md-offset-3">
<div class="text-danger"><h3>Edit Student Details</h3></div>

<%= form_with(model: @student, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :student_name, 'Student Name' %>
    <%= form.text_field :student_name, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= form.label :subject_name, 'Subject' %>
    <%= form.text_field :subject_name, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= form.label :mark, 'Mark' %>
    <%= form.number_field :mark, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= form.submit 'Update', class: 'btn btn-primary' %>
    <%= link_to 'Back', students_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
</div>
</div>
</div>

